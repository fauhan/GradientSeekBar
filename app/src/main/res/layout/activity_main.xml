<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".MainActivity">

    <com.inpows.gradientseekbar.IndicatorStayLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <com.inpows.gradientseekbar.GradientSeekBar
            android:id="@+id/gradient_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:gsb_max="10"
            app:gsb_min="0"
            app:gsb_progress="7"
            app:gsb_seek_smoothly="true"
            app:gsb_ticks_count="11"
            app:gsb_show_tick_marks_type="ruler"
            app:gsb_tick_marks_size="27dp"
            app:gsb_tick_marks_drawable="@null"
            app:gsb_show_tick_texts="false"
            app:gsb_tick_marks_ends_hide="false"
            app:gsb_thumb_size="27dp"
            app:gsb_thumb_adjust_auto="true"
            app:gsb_indicator_text_color="@color/blue_50"
            app:gsb_thumb_drawable="@drawable/active_circle_thumb_seek_bar"
            app:gsb_tick_marks_swept_hide="false"
            app:gsb_show_indicator="rounded_rectangle"
            app:gsb_indicator_color="@color/blue_50"
            app:gsb_track_background_size="17dp"
            app:gsb_track_progress_color="@null"
            app:gsb_track_progress_size="17dp"
            app:gsb_track_rounded_corners="true"
            app:gsb_track_background_type="gradient_color"
            app:gsb_only_thumb_draggable="false"
            app:gsb_tick_texts_array="@array/tick_survey"
            app:gsb_ruler_width="1.4dp"
            app:gsb_ruler_size="5.5dp"
            app:gsb_ruler_offset="28dp"
            app:gsb_ruler_color="@color/ruler_seekbar_color"/>

    </com.inpows.gradientseekbar.IndicatorStayLayout>

</androidx.constraintlayout.widget.ConstraintLayout>